.title {
  color:#06ae56;
  border-bottom: 1rpx solid rgb(159, 159, 189);
  font-size: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  text-align: center;
  vertical-align: center;
  display: -webkit-inline-flex;
  font-weight: 400;
  margin-bottom: 30rpx;
  margin-top: 20rpx;
}

.list {
  line-height: 8vh;
  width: 40vh;
  display: flex;
  align-items: center;
  font-size: 15px;
  font-weight: bold;
  background-color: #06ae573a;
  border-radius: 10px;
  margin-left: 40rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  padding-left: 50rpx
}

.btn {
  width: 100%;
  color: #06ae56;
  position: fixed;
  bottom: 0;
}
