<!--pages/wordShow/wordShow.wxml-->
<view wx:for="{{word}}" wx:key="word" bindtouchstart="touchStart" bindtouchmove="touchMove" bindtouchend="touchEnd">
  <view wx:if="{{item.id2==id}}">
    <view class='container'>
      <text class='word'> {{item.word}}</text>
      <view class='IPA'>
        <text decode="{{true}}"> 美&nbsp;&nbsp;{{item.yinbiao_AE}}</text>
        <button class='button1' plain="true" bindtap="sound_AE" data-index="{{index}}">
          <image class='icon' src="icon.jpg"></image>
        </button>
        <text decode="{{true}}"> 英&nbsp;&nbsp;{{item.yinbiao_BE}}</text>
        <button class='button1' plain="true" bindtap="sound_BE" data-index="{{index}}">
          <image class='icon' src="icon.jpg"></image>
        </button>
      </view>

      <text class='detail' decode="{{true}}">释义:&nbsp;&nbsp;&nbsp;&nbsp;{{item.yisi}}</text>
      <text class='detail' decode="{{true}}"> 例句:&nbsp;&nbsp;&nbsp;&nbsp;{{item.liju_e}}</text>
      <text class='detail' decode="{{true}}"> 翻译:&nbsp;&nbsp;&nbsp;&nbsp;{{item.liju_cn}}</text>
      <view bindtap="timecalculate" data-index="{{index}}">
        <view wx:for="{{list}}" wx:key="item" bindtap="click" data-index="{{index}}">
          <button wx:if="{{index==selectedindex}}" type="primary"> {{item}}</button>
          <button wx:else type="default"> {{item}}</button>
        </view>
      </view>
    </view>
  </view>
</view>