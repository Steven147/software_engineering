<!--pages/wordShow/wordShow.wxml-->
  <view wx:for="{{word}}" wx:key="word">
    <view wx:if="{{item.id2==id}}">
      <view class='container'>
        <text class='word'> {{item.word}}</text>
        <view class='IPA'>
          <text> {{item.yinbiao}}</text>
          <button class='button1' plain="true" bindtap="sound" data-index="{{index}}">
            <image class='icon' src="icon.jpg"></image>
          </button>
        </view>
        <text class='detail'> {{item.yisi}}</text>
        <view>
          <button type="primary" class="button2" bindtap="goTest0" data-index="{{index}}">太简单</button>
          <button type="primary" class="button2" bindtap="goTest1"data-index="{{index}}">下一个</button>
          <button type="primary" class="button2" bindtap="goTest2"data-index="{{index}}">仍需记忆</button>
        </view>

      </view>


    </view>
  </view>

<button class=".btn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="goindex">
  next
</button>